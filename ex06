<body>
   <div id="area">
    Interajaaaaaaa
   </div> 

   <script>
       var a = window.document.getElementById('area')
       a.addEventListener('click' , clicar)
       a.addEventListener('mouseenter' , entrar)
       a.addEventListener('mouseout' , sair)

       function clicar() {
           a.innerText
           = 'Clicou!'
           a.style.background = '#A32C5F'
       }
       function entrar() {
           a.innerText = 'Entrou!'
       }
       function sair() {
           a.innerText = 'Saiu!'
           a.style.background = '#F0E14E'
       }
       
   </script>

</body>
</html>
